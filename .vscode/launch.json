	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Flask",
			"type": "python",
			"request": "launch",
			"program": "${workspaceRoot}/api/run.py",
			"cwd": "${workspaceRoot}",
			"env": {
				"PYTHONPATH": "${workspaceFolder}",
				"FLASK_APP": "${workspaceRoot}/api/run.py",
				"FLASK_ENV": "development",
				"FLASK_DEBUG": "0"
			},
			// "envFile": "${workspaceRoot}/api/.env",
			"args": [
				"run",
				"--no-debugger",
				"--no-reload"
			],
			"jinja": true
		}
	]
}